{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "noUncheckedIndexedAccess": true,
        "jsxImportSource": "react",
        "paths": {
            "@scripts/*": ["./scripts/*"],
            "@/*": ["./src/*"],
            "@convex/*": ["./convex/*"],
        }
    }
}